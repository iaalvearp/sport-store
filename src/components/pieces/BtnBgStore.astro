---
const { href, text } = Astro.props

interface Props {
	href: string;
	text: string;
}
---

<a class="py-2 md:py-3 px-8 md:px-12 min-w-56 text-center text-xs bg-[var(--text-reg)] hover:bg-[var(--overlay-btn)] hover:backdrop-blur-sm text-[var(--bg)] hover:text-[var(--text-reg)] rounded cursor-pointer scale-100 active:scale-90 duration-500" href={ href }>
    { text }
</a>

<style>
    a {
        border: 1px var(--text-reg) solid;
    }
</style>